<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CreatePostFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_view_create_post"
            android:layout_width="match_parent"
            android:layout_height="170dp" />

        <Spinner
            android:id="@+id/spinnerCategory_create_post"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:entries="@array/categories">

        </Spinner>

        <EditText
            android:id="@+id/etTitle_create_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title :" />

        <EditText
            android:id="@+id/etContent_create_post"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:hint="Write your story" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bSubmit_create_post"
            android:layout_marginTop="-10dp"
            android:text="Post To Hive"/>

    </LinearLayout>
</FrameLayout>
